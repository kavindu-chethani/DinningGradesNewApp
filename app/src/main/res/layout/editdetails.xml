<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="153dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rices" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="231dp"
        android:layout_height="95dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="28dp"
        android:text="OrderId:001
                                            Name:NormalRice
                                                               CustomerName:kasun"
        android:textColor="@color/purple_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_address"
        android:layout_width="221dp"
        android:layout_height="62dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="160dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Address"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/edit_contact"
        android:layout_width="222dp"
        android:layout_height="56dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="CustomerContactNumber"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_address" />

    <EditText
        android:id="@+id/edit_qty"
        android:layout_width="212dp"
        android:layout_height="50dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Quantity"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_contact" />

    <Button
        android:id="@+id/btn_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:onClick="CreateData"
        android:text="@string/btn_7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_qty" />

    <EditText
        android:id="@+id/t1"
        android:layout_width="225dp"
        android:layout_height="56dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="96dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btn_12"
        android:layout_width="116dp"
        android:layout_height="48dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="28dp"
        android:onClick="show"
        android:text="@string/btn_12"
        app:layout_constraintStart_toEndOf="@+id/btn_7"
        app:layout_constraintTop_toBottomOf="@+id/edit_qty" />

    <Button
        android:id="@+id/btn_13"
        android:layout_width="126dp"
        android:layout_height="50dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="132dp"
        android:onClick="remake"
        android:text="@string/btn_13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_qty" />

    <Button
        android:id="@+id/btn_14"
        android:layout_width="123dp"
        android:layout_height="52dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="48dp"
        android:onClick="ignore"
        android:text="@string/btn_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toEndOf="@+id/btn_13"
        app:layout_constraintTop_toBottomOf="@+id/btn_12"
        app:layout_constraintVertical_bias="0.075" />


</androidx.constraintlayout.widget.ConstraintLayout>